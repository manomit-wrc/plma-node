						<i class="fa fa-cloud-download"></i> Import Client</a>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="table-responsive client">
					 {{#if_eq count_query "0"}}{{else}}
					<a href="/client" class="btn btn-primary rounded advancedFilter" style="right: 595px !important;">
						<i class="fa fa-eraser"></i> Clear Filter</a>
					{{/if_eq}}
					<button class="btn btn-primary rounded advancedFilter" data-toggle="modal" data-target="#add_filter">
						<i class="fa fa-filter"></i> Filter</button>
					<table class="table table-striped custom-table datatable client sect">
						<thead>
							<tr>
								<th>
									<input type="checkbox" onClick="checkall(this);" /> SL#
								</th>
								<th>Name</th>
								<th>Email Id</th>
								<th>Start Date</th>
								<th>End Date</th>
								<th>Estimated Revenue</th>
								{{!-- <th>Current Revenue</th> --}}
								<th class="text-right">Action</th>
							</tr>
						</thead>
						<tbody>
							{{#each clients}}
							<tr>
								<td>
									<input type="checkbox" name="client_check_id" value="{{this.id}}" /> {{math @index "+" 1}}
								</td>
								<td>
									<a href="/client/view/{{this.id}}">
										{{#if_eq client_type "O"}} {{this.organization_name}} {{/if_eq}} {{#if_eq client_type "I"}} {{this.first_name}} {{this.last_name}}
										{{/if_eq}}
									</a>
								</td>
								<td>{{this.email}}</td>
								<td>
									 {{dateFormat this.revenues.0.start_date "DD-MM-YYYY"}}
								</td>
								<td>{{dateFormat this.revenues.0.end_date "DD-MM-YYYY"}}</td>
								<td>$ {{this.revenues.0.estimated_revenue}}</td>
								{{!-- <td>$ {{this.current_revenue}}</td> --}}
								<td class="text-right">
									<a href="/client/view-referral/{{this.id}}" class="btn btn-success btn-sm" title="See associate referral">
										<i class="fa fa-user-plus"></i>
									</a>
									<a href="/client/view-activity/{{this.id}}" class="btn btn-success btn-sm" title="See associated activity">
										<i class="fa fa-tasks"></i>
									</a>
									<a href="/client/view/{{this.id}}" class="btn btn-success btn-sm">
										<i class="fa fa-eye m-r-5"></i>
									</a>
									<a href="/client/edit/{{this.id}}" class="btn btn-success btn-sm">
										<i class="fa fa-pencil m-r-5"></i>
									</a>

									<a href="javascript:void(0)" data-toggle="modal" data-target="delete_users" data-client-id="{{this.id}}" id="delete_client"
									 class="btn btn-danger btn-sm">
										<i class="fa fa-trash-o m-r-5"></i>
									</a>
								</td>
							</tr>
							{{/each}}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

