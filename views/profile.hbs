{{#content "style" mode="prepend"}}
<link rel="stylesheet" type="text/css" href="/assets/css/bootstrap-multiselect.css">
<link rel="stylesheet" type="text/css" href="/assets/css/select2.min.css">
<link rel="stylesheet" type="text/css" href="/assets/css/bootstrap-datetimepicker.min.css">

<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.6.3/css/bootstrap-select.min.css" />

 {{/content}}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="row">
            <div class="col-sm-8">
                <h4 class="page-title">My Profile</h4>
            </div>
            <div class="col-sm-4 text-right m-b-30">
                <a href="/dashboard" class="btn btn-primary rounded"><i class="fa fa-arrow-left"></i> Back</a>
                {{#if_eq user.role_id "3"}} {{#if_eq user.actual_role_id "0"}}
                <a href="/edit-attorney-profile" class="btn btn-primary rounded"><i class="fa fa-pencil"></i> Edit Profile</a>
                {{else}}
                <a href="/edit-profile" class="btn btn-primary rounded"><i class="fa fa-pencil"></i> Edit Profile</a>
                {{/if_eq}} {{else}}
                <a href="/edit-profile" class="btn btn-primary rounded"><i class="fa fa-pencil"></i> Edit Profile</a>
                {{/if_eq}}
            </div>
        </div>
        <div class="card-box">
            <div class="row">
                <div class="col-md-12">
                    <div class="profile-view">
                        <div class="profile-img-wrap">
                            <div class="profile-img">
                                <a href="#"><img class="avatar" src="{{user.avatar}}" alt=""></a>
                            </div>
                        </div>
                        <div class="profile-basic">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="profile-info-left">
                                        <h3 class="user-name m-t-0 m-b-0">{{user.first_name}}&nbsp;{{user.last_name}}</h3>
                                        <small class="text-muted">{{user.role.title}}</small>
                                    </div>
                                </div>

                                <div class="col-md-7">
                                    <ul class="personal-info">
                                        <li>
                                            <span class="title">Email Id:</span>
                                            <span class="text">{{user.email}}</span>
                                        </li>
                                        <li>
                                            <span class="title">Mobile:</span>
                                            <span class="text number_validator">{{user.mobile_no}}</span>
                                        </li>

                                        <li>
                                            <span class="title">Address:</span>
                                            <span class="text">{{user.address}}</span>
                                        </li>

                                        <li>
                                            <span class="title">City:</span>
                                            <span class="text">{{city.name}}</span>
                                        </li>

                                        <li>
                                            <span class="title">State:</span>
                                            <span class="text">{{state.name}}</span>
                                        </li>

                                        <li>
                                            <span class="title">Country:</span>
                                            <span class="text">{{country.name}}</span>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-box user-profile">
            <h3 class="card-title">Contact Informations</h3>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label">Address</label>
                        <label class="control-label title">{{user.address}}</label>
                        <!-- <input type="text" class="form-control floating" id="address" name="address" value="{{user.address}}" disabled/> -->
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label">Address Line 2</label>
                        <label class="control-label title">{{edata.attorney_details.0.address2}}</label>
                        <!-- <input type="text" class="form-control floating" id="address2" name="address2" value="{{edata.attorney_details.0.address2}}"
                            disabled/> -->
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label">Address Line 3</label>
                        <label class="control-label title">{{edata.attorney_details.0.address3}}</label>
                        <!-- <input type="text" class="form-control floating" id="address3" name="address3" value="{{edata.attorney_details.0.address3}}"
                            disabled/> -->
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label">Mobile No</label>
                        <label class="control-label title">{{user.mobile_no}}</label>
                        <!-- <input type="text" class="form-control floating number_validator" id="mobile_no" name="mobile_no" value="{{user.mobile_no}}"
                            disabled/> -->
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Country</label>
                        <label class="control-label title">{{this.id}}</label>
                        <!-- <select class="select form-control floating" id="country" name="country" disabled>
                            {{#each country}}
                            <option value="{{this.id}}" {{#if_eq this.id 233}} selected="selected" {{/if_eq}}>{{this.name}}</option>
                            {{/each}}
                        </select> -->
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">State</label>
                        <label class="control-label title">{{this.id}}</label>
                        <!-- <select class="select form-control floating" id="state" name="state" disabled>
                            <option value="">Select State</option>
                            {{#each state}}
                            <option value="{{this.id}}" {{#if_eq this.id ../user.state}} selected="selected" {{/if_eq}}>{{this.name}}</option>
                            {{/each}}
                        </select> -->
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">City</label>
                        <label class="control-label title">{{this.id}}</label>
                        <!-- <select class="select form-control floating" id="city" name="city" disabled>
                            <option value="">Select City</option>
                            {{#each city}}
                            <option value="{{this.id}}" {{#if_eq this.id ../user.city}} selected="selected" {{/if_eq}}>{{this.name}}</option>
                            {{/each}}
                        </select> -->
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Zipcode</label>
                        <label class="control-label title">{{this.id}}</label>
                        <!-- <select class="select form-control floating" id="zipcode" name="zipcode" disabled>
                            <option value="">Select Zipcode</option>
                            {{#each zipcode}}
                            <option value="{{this.id}}" {{#if_eq this.id ../user.zipcode}} selected="selected" {{/if_eq}}>{{this.zip}}</option>
                            {{/each}}
                        </select> -->
                    </div>
                </div>
            </div>
        </div>
        <div class="card-box">
            <h3 class="card-title">Education Information</h3>
            <div class="row" id="educationRow">

                {{#if_eq edata.education ""}}
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Degree Type</label>
                        <!-- <input type="text" class="form-control floating" id="degree" name="degree[]" disabled/> -->
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">University</label>
                        <!-- <input type="text" class="form-control floating" id="university" name="university[]" disabled/> -->
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">Year</label>
                        <!-- <input type="text" class="form-control floating" id="year" name="year[]" onkeypress="return isNumber(event)" maxlength="4"
                            title="Only numbers are allowed" disabled/> -->
                    </div>
                </div>
                <div class="col-md-1">
                    <button class="btn btn-primary btn-lg" type="button" id="addEducationBtn">
                        <i class="fa fa-plus"></i></button>
                </div>

                {{else}} {{#each edata.education}}
                <div class="control-group">
                    <div class="col-md-4">
                        <div class="form-group form-focus">
                            <label class="control-label">Degree Type</label>
                            <input type="text" class="form-control floating" id="degree" name="degree[]" value="{{this.degree}}" disabled/>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group form-focus">
                            <label class="control-label">University</label>
                            <input type="text" class="form-control floating" id="university" name="university[]" value="{{this.university}}" disabled/>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group form-focus">
                            <label class="control-label">Year</label>
                            <input type="text" class="form-control floating" id="year" value="{{this.year}}" name="year[]" onkeypress="return isNumber(event)"
                                maxlength="4" title="Only numbers are allowed" disabled/>
                        </div>
                    </div>
                    <div class="col-md-1">
                        {{#show_button_add @index}}
                        <button class="btn btn-primary btn-lg" type="button" id="addEducationBtn">
                            <i class="fa fa-plus"></i>
                        </button>
                        {{else}}
                        <button class="btn btn-primary btn-lg removeEducationBtn" type="button">
                            <i class="fa fa-close"></i>
                        </button>
                        {{/show_button_add}}
                    </div>
                </div>
                {{/each}} {{/if_eq}}
                <div class="educationAddDiv hide">
                    <div class="control-group">
                        <div class="col-md-4">
                            <div class="form-group form-focus">
                                <label class="control-label">Degree Type</label>
                                <input type="text" class="form-control floating" name="degree[]" disabled/>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group form-focus">
                                <label class="control-label">University</label>
                                <input type="text" class="form-control floating" name="university[]" disabled/>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group form-focus">
                                <label class="control-label">Year</label>
                                <input type="text" class="form-control floating" id="year" name="year[]" onkeypress="return isNumber(event)" maxlength="4"
                                    title="Only numbers are allowed" disabled/>
                            </div>
                        </div>
                        <div class="col-md-1">
                            <button class="btn btn-primary btn-lg removeEducationBtn" type="button">
                                <i class="fa fa-close"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card-box">
            <h3 class="card-title">Profile Informations</h3>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group form-focus select-focus select-attorney">
                        <label class="control-label">Group
                        </label>
                        <select id="group" name="group" class="form-control floating selectpicker" data-show-subtext="true" data-live-search="true"
                            disabled>
                            <option value="">Select Group</option>
                            {{#each group}}
                            <option value="{{this.id}}" {{#if_eq this.id ../edata.group_id}} selected="selected" {{/if_eq}}>{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus select-focus select-attorney">
                        <label class="control-label">Section
                        </label>
                        <select id="section" name="section" class="form-control floating selectpicker" data-show-subtext="true" data-live-search="true"
                            disabled>
                            <option value="">Select Section</option>
                            {{#each section}}
                            <option value="{{this.section.id}}" {{#if_eq this.section.id ../user.section_id}} selected="selected" {{/if_eq}}>{{this.section.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus select-focus select-attorney">
                        <label class="control-label">Designation
                        </label>
                        <select id="designation" name="designation" class="form-control floating selectpicker" data-show-subtext="true" data-live-search="true"
                            disabled>
                            <option value="">Select Designation</option>
                            {{#each designation}}
                            <option value="{{this.id}}" {{#if_eq this.id ../user.designation_id}} selected="selected" {{/if_eq}}>{{this.title}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="control-label">Attorney ID</label>
                        <input type="text" class="form-control floating" id="attorney_id" name="attorney_id" value="{{edata.attorney_details.0.attorney_id}}"
                            onkeypress="return onlyNumbers();" disabled/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="control-label">Attorney Code</label>
                        <input type="text" class="form-control floating" id="attorney_code" name="attorney_code" value="{{edata.attorney_details.0.attorney_code}}"
                            disabled/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="control-label">Phone No</label>
                        <input type="text" class="form-control floating number_validator" id="phone_no" name="phone_no" value="{{edata.attorney_details.0.phone_no}}"
                            disabled/>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="control-label">Fax</label>
                        <input type="text" class="form-control floating number_validator" id="fax" name="fax" value="{{edata.attorney_details.0.fax}}"
                            disabled/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus select-focus select-attorney">
                        <label class="control-label">Attorney Type</label>
                        <select class="form-control floating selectpicker" id="attorney_type" name="attorney_type" data-show-subtext="true" data-live-search="true"
                            disabled>
                            <option value="">Select Attorney Type</option>
                            <option value="AT-INTERIM" {{#if_eq edata.attorney_details.0.attorney_type "AT-INTERIM"}} selected="selected" {{/if_eq}}>INTERIM
                                ATTORNEY
                            </option>
                            <option value="AT-APPROVED" {{#if_eq edata.attorney_details.0.attorney_type "AT-APPROVED"}} selected="selected" {{/if_eq}}>APPROVED
                                ATTORNEY
                            </option>
                            <option value="PENDING" {{#if_eq edata.attorney_details.0.attorney_type "PENDING"}} selected="selected" {{/if_eq}}>ATTORNEY
                                TO BE ASSIGNED</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="control-label">Bar Registration</label>
                        <input type="text" class="form-control floating" id="bar_registration" name="bar_registration" value="{{edata.attorney_details.0.bar_registration}}"
                            disabled/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus select-focus select-attorney">
                        <label class="control-label">Job Type</label>
                        <select class="form-control floating selectpicker" id="job_type" name="job_type" data-show-subtext="true" data-live-search="true"
                            disabled>
                            <option value="">Select Job Type</option>
                            <option value="FULLTIME" {{#if_eq edata.attorney_details.0.job_type "FULLTIME"}} selected="selected" {{/if_eq}}>FULLTIME</option>
                            <option value="STERMCON" {{#if_eq edata.attorney_details.0.job_type "STERMCON"}} selected="selected" {{/if_eq}}>SHORT
                                TERM CONTRACT</option>
                            <option value="TEMP" {{#if_eq edata.attorney_details.0.job_type "TEMP"}} selected="selected" {{/if_eq}}>TEMPORARY</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="control-label">Bar Practice Date</label>
                        <div class="cal-icon">
                            <input class="form-control floating datetimepicker" type="text" id="bar_practice_date" name="bar_practice_date" value="{{dateFormat edata.attorney_details.0.bar_practice_date "
                                DD-MM-YYYY "}}" disabled>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="control-label">Firm Join Date</label>
                        <div class="cal-icon">
                            <input class="form-control floating datetimepicker" type="text" id="firm_join_date" name="firm_join_date" value="{{dateFormat edata.attorney_details.0.firm_join_date "
                                DD-MM-YYYY "}}" disabled>
                        </div>
                    </div>
                </div>


                <div class="col-md-6">
                    <div class="form-group form-focus select-focus select-attorney">
                        <label class="control-label">Jurisdiction
                            <span class="req-lbl">*</span>
                        </label>
                        <select id="jurisdiction" name="jurisdiction" class="form-control floating selectpicker" data-show-subtext="true" data-live-search="true"
                            disabled>
                            <option value="">Select Jurisdiction</option>
                            {{#each jurisdiction}}
                            <option value="{{this.id}}" {{#if_eq this.id ../edata.attorney_details.0.jurisdiction}} selected="selected" {{/if_eq}}>{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="control-label">Hourly Cost</label>
                        <input type="text" class="form-control floating" id="hourly_cost" name="hourly_cost" value="{{edata.attorney_details.0.hourly_cost}}"
                            disabled/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="control-label">Benefit Factor %</label>
                        <input type="text" class="form-control floating" id="benefit_factor" name="benefit_factor" value="{{edata.attorney_details.0.benefit_factor}}"
                            disabled/>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="control-label">Overhead Amount</label>
                        <input type="text" class="form-control floating" id="overhead_amount" name="overhead_amount" value="{{edata.attorney_details.0.overhead_amount}}"
                            disabled/>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="control-label">Billing Opp Cost</label>
                        <input type="text" class="form-control floating" id="billing_opp_cost" name="billing_opp_cost" value="{{edata.attorney_details.0.billing_opp_cost}}"
                            disabled/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="control-label">Website URL</label>
                        <input type="text" class="form-control floating url_selector" id="website_url" name="website_url" value="{{edata.attorney_details.0.website_url}}"
                            disabled/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="control-label">Linkedin</label>
                        <input type="text" class="form-control floating url_selector" id="social_url" name="social_url" value="{{edata.attorney_details.0.social_url}}"
                            disabled/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="control-label">Remarks </label>
                        <textarea class="form-control floating" id="remarks" name="remarks" readonly>{{edata.attorney_details.0.remarks}}</textarea>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group form-focus select-focus select-attorney">
                        <div class="">
                            <select class="form-control floating" id="practice_area" name="practice_area" multiple="multiple" disabled>
                                {{#each allPracticeArea}}
                                <option value="{{this.practicearea.id}}" {{#inArray ../arr this.practicearea.id}} selected="selected" {{/inArray}}>{{this.practicearea.name}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{#content "script" mode="append"}}
