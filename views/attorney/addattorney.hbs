    <script language="JavaScript">
    function onlyNumbers(evt)
    {
    var e = event || evt; // for trans-browser compatibility
    var charCode = e.which || e.keyCode;

    if (charCode > 31 && (charCode < 48 || charCode > 57))
        return false;

    return true;

    }
    </script>


    <script language="JavaScript">
    function onlyHourlyCostNumbers(evt)
    {
    var e = event || evt; // for trans-browser compatibility
    var charCode = e.which || e.keyCode;

    if (charCode > 31 && (charCode < 48 || charCode > 57))
        return false;

    return true;

    }
    </script>



