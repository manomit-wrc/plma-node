{{#content "style" mode="prepend"}}
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap-multiselect.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/dataTables.bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/select2.min.css">
{{/content}}

<div class="page-wrapper">
   <div class="content container-fluid">
      <div class="row">
         {{#if err_message}}
        <div class="alert alert-danger">
            <strong>Error! </strong>{{err_message}}
        </div>
        {{/if}}
         <div class="col-sm-8">
            <h4 class="page-title">Update Attorney</h4>
         </div>
      </div>

      <form id="addattorneyform" method="POST" action="/attorney/add">
         <input type="hidden" name="_csrf" value="{{csrfToken}}" enctype="multipart/form-data">
         <div class="card-box">
            <h3 class="card-title">User credentials</h3>
            <div class="row">
               <div class="col-md-12">
                     <div class="row">

                        <div class="col-md-6">
                           <div class="form-group form-focus">
                              <label class="control-label">Email</label>
                              <input type="text" class="form-control floating"
                                     id="email" name="email"/>
                              <span id="uniqueEmail" style="color: red; font-weight:bolder"></span>
                           </div>
                        </div>
                        <div class="col-md-6">
                           <div class="form-group form-focus">
                              <label class="control-label">Password</label>
                              <input type="password" class="form-control floating"
                                     id="password" name="password" />
                           </div>
                        </div>

                        <div class="col-md-6">
                           <div class="form-group form-focus">
                        <select id="group" name="group" class="select form-control floating">
                          <option value="">Select Group</option>
                          {{#each group}}
                          <option value="{{this.id}}">{{this.name}}</option>
                          {{/each}}
                        </select>
                      </div>
                     </div>
                        <div class="col-md-6">
                           <div class="form-group form-focus">
                        <select id="section" name="section" class="select form-control floating">
                        <option value="">Select Section</option>
                        {{#each section}}
                        <option value="{{this.id}}">{{this.name}}</option>
                        {{/each}}
                        </select>
                      </div>
                     </div>
                        <div class="col-md-6">
                           <div class="form-group form-focus">
                        <select id="designation" name="designation" class="select form-control floating">
                          <option value="">Select Designation</option>
                          {{#each designation}}
                          <option value="{{this.id}}">{{this.title}}</option>
                          {{/each}}
                        </select>
                      </div>
                     </div>

                     </div>
               </div>
             </div>
           </div>




           <div class="card-box">
             <h3 class="card-title">General Information</h3>
             <div class="row">

               <div class="col-md-6">
                  <div class="form-group form-focus">
                     <label class="control-label">First Name</label>
                     <input type="text" class="form-control floating"
                            id="first_name" name="first_name"/>
                    </div>
               </div>
                   <div class="col-md-6">
                      <div class="form-group form-focus">
                         <label class="control-label">Last Name</label>
                         <input type="text" class="form-control floating"
                         id="last_name" name="last_name"/>
                      </div>
                   </div>
               <div class="col-md-6">
                   <div class="form-group form-focus">
                       <label class="control-label">Birth Date</label>
                       <div class="cal-icon">
                           <input class="form-control floating datetimepicker"
                               type="text" id="dob" name="dob">
                       </div>
                   </div>
               </div>
               <div class="col-md-6">
                   <div class="form-group form-focus select-focus">
                       <select class="form-control floating" id="gender" name="gender">
                           <option value="">Select Gender</option>
                           <option value="M">Male</option>
                           <option value="F">Female</option>
                       </select>
                   </div>
               </div>
               <div class="col-md-6">
                  <div class="form-group form-focus">
                     <label class="control-label">Attorney ID</label>
                     <input type="text" class="form-control floating"
                     id="attorney_id" name="attorney_id" onkeypress="return onlyNumbers();"/>
                  </div>
               </div>
               <div class="col-md-6">
                  <div class="form-group form-focus">
                     <label class="control-label">Attorney Code</label>
                     <input type="text" class="form-control floating"
                     id="attorney_code" name="attorney_code"/>
                  </div>
               </div>
               <div class="col-md-6">
                   <div class="form-group form-focus select-focus">
                       <select class="form-control floating" id="attorney_type" name="attorney_type">
                           <option value="">Select Attorney Type</option>
                          <option value="AT-INTERIM">INTERIM ATTORNEY</option>
                          <option value="AT-APPROVED">APPROVED ATTORNEY</option>
                          <option value="PENDING">ATTORNEY TO BE ASSIGNED</option>
                       </select>
                   </div>
               </div>
               <div class="col-md-6">
                  <div class="form-group form-focus">
                     <label class="control-label">Education</label>
                     <input type="text" class="form-control floating"
                     id="education" name="education"/>
                  </div>
               </div>
             </div>
           </div>





<div class="card-box">
  <h3 class="card-title">Employment Information</h3>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group form-focus">
        <label class="control-label">Bar Registration</label>
        <input type="text" class="form-control floating" id="bar_registration" name="bar_registration"/>
      </div>
    </div>
    <div class="col-md-6">
        <div class="form-group form-focus select-focus">
            <select class="form-control floating" id="job_type" name="job_type">
                <option value="">Select Job Type</option>
                <option value="FULLTIME">FULLTIME</option>
                <option value="STERMCON">SHORT TERM CONTRACT</option>
                <option value="TEMP">TEMPORARY</option>
            </select>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group form-focus">
            <label class="control-label">Bar Practice Date</label>
            <div class="cal-icon">
                <input class="form-control floating datetimepicker"
                    type="text" id="bar_practice_date" name="bar_practice_date">
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group form-focus">
            <label class="control-label">Firm Join Date</label>
            <div class="cal-icon">
                <input class="form-control floating datetimepicker"
                    type="text" id="firm_join_date" name="firm_join_date">
            </div>
        </div>
    </div>

    <div class="col-md-6">
       <div class="form-group form-focus">
    <select id="jurisdiction" name="jurisdiction" class="select form-control floating">
    <option value="">Select Jurisdiction</option>
    {{#each jurisdiction}}
    <option value="{{this.id}}">{{this.name}}</option>
    {{/each}}
    </select>
  </div>
 </div>
 <div class="col-md-6">
    <div class="form-group form-focus">
 <select id="industry_type" name="industry_type" class="select form-control floating">
 <option value="">Select Industry Type</option>
 {{#each industry_type}}
 <option value="{{this.id}}">{{this.industry_name}}</option>
 {{/each}}
 </select>
</div>
</div>

<div class="col-md-6">
         <div class="form-group form-focus">
           <label class="control-label">Hourly Cost</label>
            <input type="text" class="form-control floating"
            id="hourly_cost" name="hourly_cost" onkeypress="return onlyNumbers();"/>
         </div>
      </div>
      <div class="col-md-6">
               <div class="form-group form-focus">
                 <label class="control-label">Benefit Factor %</label>
                  <input type="text" class="form-control floating"
                  id="benefit_factor" name="benefit_factor" onkeypress="return onlyHourlyCostNumbers();"/>
               </div>
            </div>

            <div class="col-md-6">
                     <div class="form-group form-focus">
                       <label class="control-label">Overhead Amount</label>
                        <input type="text" class="form-control floating"
                        id="overhead_amount" name="overhead_amount" onkeypress="return onlyNumbers();"/>
                     </div>
                  </div>



                  <div class="col-md-6">
                           <div class="form-group form-focus">
                             <label class="control-label">Billing Opp Cost</label>
                              <input type="text" class="form-control floating"
                              id="billing_opp_cost" name="billing_opp_cost" onkeypress="return onlyBenifitNumbers();"/>
                           </div>
                        </div>

  </div>
</div>








<div class="card-box">
  <h3 class="card-title">Address Details</h3>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group form-focus">
        <label class="control-label">Address Line 1</label>
        <input type="text" class="form-control floating" id="address" name="address"/>
      </div>
    </div>
    <div class="col-md-12">
      <div class="form-group form-focus">
        <label class="control-label">Address Line 2</label>
        <input type="text" class="form-control floating" id="address2" name="address2"/>
      </div>
    </div>
    <div class="col-md-12">
      <div class="form-group form-focus">
        <label class="control-label">Address Line 3</label>
        <input type="text" class="form-control floating" id="address3" name="address3"/>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group form-focus">
        <select id="country" name="country" class="select form-control">
          <option value="">Select Country</option>
          {{#each country}}
          <option value="{{this.id}}" {{#if_eq this.id 233}} selected="selected" {{/if_eq}}>{{this.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group form-focus">
        <select id="state" name="state" class="select form-control">
          <option value="">Select State</option>
          {{#each state}}
          <option value="{{this.id}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group form-focus">
        <select id="city" name="city" class="select form-control">
          <option value="">Select City</option>

        </select>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group form-focus">
        <select id="zipcode" name="zipcode" class="select form-control">
          <option value="">Select Zipcode</option>
        </select>
      </div>
    </div>
    <div class="col-md-6">
                  <div class="form-group form-focus">
                     <label class="control-label">Mobile No</label>
                     <input type="text" class="form-control floating number_validator"
                     id="mobile_no" name="mobile_no"/>
                  </div>
               </div>


<div class="col-md-6">
         <div class="form-group form-focus">
            <label class="control-label">Phone No</label>
            <input type="text" class="form-control floating number_validator"
            id="phone_no" name="phone_no"/>
         </div>
      </div>
      <!-- <div class="col-md-6">
               <div class="form-group form-focus">
                  <label class="control-label">E-mail</label>
                  <input type="text" class="form-control floating"
                  id="e_mail" name="e_mail"/>
               </div>
            </div> -->
      <div class="col-md-6">
                    <div class="form-group form-focus">
                       <label class="control-label">Fax</label>
                       <input type="text" class="form-control floating"
                       id="fax" name="fax"/>
                    </div>
                 </div>
<div class="col-md-6">
<div class="form-group form-focus">
      <label class="control-label">Website URL</label>
      <input type="text" class="form-control floating url_selector"
      id="website_url" name="website_url"/>
</div>
</div>
<div class="col-md-6">
          <div class="form-group form-focus">
             <label class="control-label">Social URL</label>
             <input type="text" class="form-control floating url_selector"
             id="social_url" name="social_url"/>
          </div>
       </div>

</div>
</div>


    <div class="card-box">
      <h3 class="card-title">Remarks</h3>
      <div class="row">
          <div class="col-md-12">
          <div class="form-group form-focus">
         <label class="control-label">Remarks </label>
    <textarea class="form-control floating" id="remarks" name="remarks" rows="5"></textarea>
  </div>
</div>
</div>
</div>


