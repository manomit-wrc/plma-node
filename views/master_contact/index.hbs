                        <i class="fa fa-trash" aria-hidden="true"></i> Delete </a>

                    <a href="/master_contact/add" class="btn btn-primary rounded pull-right m-r-5">
                        <i class="fa fa-plus"></i> Add Contact</a>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped custom-table datatable">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" onClick="checkall(this);" /> SL#
                                </th>
                                <th>Name</th>
                                <th>Email Id</th>
                                <th>Contact Code</th>
                                <th>Mobile Number</th>
                                <th>Company Name</th>
                                <th>Status</th>
                                <th class="text-right">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each contacts}}
                            <tr>
                                <td>
                                    <input type="checkbox" name="contact_id" value="{{this.id}}" /> {{math @index "+" 1}}
                                </td>
                                <td>
                                    <a href="/master_contact/view/{{this.id}}"> {{this.first_name}} {{this.last_name}} </a>
                                </td>
                                <td>{{this.email}}</td>
                                <td>{{this.master_contact_code}}</td>
                                <td class="number_validator">{{this.mobile_no}}</td>
                                <td>{{this.company_name}}</td>
                                <td>{{this.status}}</td>
                                <td class="text-right">
                                    <a href="/master_contact/view/{{this.id}}" class="btn btn-success btn-sm">
                                        <i class="fa fa-eye m-r-5"></i>
                                    </a>
                                    <a href="/master_contact/edit/{{this.id}}" class="btn btn-info btn-sm">
                                        <i class="fa fa-pencil m-r-5"></i>
                                    </a>
                                    {{!-- <a href="javascript:void(0)" data-toggle="modal" data-target="#{{this.id}}" class="btn btn-danger btn-sm">
                                        <i class="fa fa-trash-o m-r-5"></i>
                                    </a> --}}

                                    <a href="javascript:void(0)" data-toggle="modal" data-target="delete_users" data-mastercontact-id="{{this.id}}" id="delete_mastercontact" class="btn btn-danger btn-sm">
                                        <i class="fa fa-trash-o m-r-5"></i>
                                    </a>
                                </td>
                            </tr>
                            {{!-- <div class="modal fade" id="{{this.id}}" role="dialog">
                                <div class="modal-dialog">
                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-body">
                                            <p>are you sure you want to delete this master contact?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <a href="/master_contact/delete/{{this.id}}" class="btn btn-danger"> Delete </a>
                                            <button type="button" class="btn btn-default" data-dismiss="modal"> Close </button>
                                        </div>
                                    </div>
                                </div>
                            </div> --}}
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

