				},
				state: {
					required: true
				},
				city: {
					required: true
				},
				zipcode: {
					required: true
				},
				status: {
					required: true
				},
				industry_type: {
					required: true
				}
			},
			messages: {
				first_name: {
					required: "First name can't be blank"
				},
				last_name: {
					required: "Last name can't be blank"
				},
				email: {
					required: "Email id can't be blank",
					email: "Enter valid email id"
				},
				phone_no: {
					required: "Phone number can't blank"
				},
				mobile_no: {
