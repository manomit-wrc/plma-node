              {{!-- <div class="col-md-4">
                <div class="form-group form-focus select-focus">
                  <input class="form-control floating" type="file" id="activity_attachment" name="activity_attachment" multiple>
                  <div class="btn btn-primary"><img src="/assets/img/choose-file.png" alt="">Choose File</div>
