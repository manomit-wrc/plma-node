      <div class="text-center m-t-20">
        <button class="btn btn-primary btn-lg" type="submit" id="btnAdd">Save &amp; Update Activity</button>
        <a href="/activitypage" class="btn btn-primary btn-lg m-l-10">Cancel</a>
