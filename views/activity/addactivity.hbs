            } else if ($(this).val() == 'section') {
                $('#potiential_revenue').val('0.00');
                $(".none").hide();
                $(".section").show();
                $(".strategyGroup").hide();
                $('#potiential_revenue').prop('readonly', false);
            } else if ($(this).val() == 'strategic_group') {
                $('#potiential_revenue').val('0.00');
                $(".none").hide();
                $(".strategyGroup").show();
                $(".section").hide();
                $('#potiential_revenue').prop('readonly', false);
            } else {
                $('#potiential_revenue').val('0.00');
                $(".none").show();
                $(".section").hide();
                $(".strategyGroup").hide();
                $('#potiential_revenue').prop('readonly', false);
            }
        })

        $(".onchangeBudget").change(function () {
            if ($(this).val() != '') {
                $(".budgetAdd").show();
