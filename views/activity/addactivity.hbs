<script>
$(document).ready(function(){
  $('#target').change(function() {
     if($(this).is(':checked') ) {
          $('#myModal').modal('show');
     }
  });
  $('#target_user').multiselect({
    nonSelectedText: 'Select Section',
    includeSelectAllOption: true,
    buttonWidth: '100%'
  });

});

</script>
