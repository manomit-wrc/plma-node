                                    </select>
                                </div>
                            </div>

                            <div class="form-inline m-b-15 col-md-6">
                                <div class="form-group m-r-5">
                                    <label class="input-group">
                                        <span class="input-group-addon">
                                            <input type="radio" id="referral_type" name="ref_type" value="T" checked />
                                        </span>
                                        <div class="form-control form-control-static">Target</div>
                                        <span class="glyphicon form-control-feedback "></span>
                                    </label>
                                </div>
                                <div class="form-group ">
                                    <label class="input-group">
                                        <span class="input-group-addon">
                                            <input type="radio" id="organization_type" name="ref_type" value="C" />
                                        </span>
                                        <div class="form-control form-control-static">Client</div>
                                        <span class="glyphicon form-control-feedback "></span>
                                    </label>
                                </div>
                                <div class="form-group ">
                                    <label class="input-group">
                                        <span class="input-group-addon">
                                            <input type="radio" id="referral_type" name="ref_type" value="R" />
                                        </span>
                                        <div class="form-control form-control-static">Referral</div>
                                        <span class="glyphicon form-control-feedback "></span>
                                    </label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group form-focus select-focus" id="target_list">
                                    <select id="target_id" name="target_user[]" class=" form-control floating onchangeBudget" multiple="multiple">
                                        {{#each target}} {{#if_eq target_type "I"}}
                                        <option value="{{this.id}}">{{this.first_name}} {{this.last_name}}</option>
                                        {{/if_eq}} {{#if_eq target_type "O"}}
                                        <option value="{{this.id}}">{{this.organization_name}}</option>
                                        {{/if_eq}} {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6" style="display:none;" id="client_list">
                                <div class="form-group form-focus select-focus">
                                    <select id="client_id" name="client_user[]" class=" form-control floating onchangeBudget" multiple="multiple">
                                        {{#each client}} {{#if_eq client_type "I"}}
                                        <option value="{{this.id}}">{{this.first_name}} {{this.last_name}}</option>
                                        {{/if_eq}} {{#if_eq client_type "O"}}
                                        <option value="{{this.id}}">{{this.organization_name}}</option>
                                        {{/if_eq}} {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6" style="display:none;" id="referral_list">
                                <div class="form-group form-focus select-focus">
                                    <select id="referral_id" name="referral_user[]" class=" form-control floating onchangeBudget" multiple="multiple">
                                        {{#each referral}}
                                            <option value="{{this.id}}">{{this.first_name}} {{this.last_name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6"></div>
                            <div class="col-md-6"></div>
                            <div class="col-md-6 budgetAdd" style="display:none;">
                                <a href="#" class="btn btn-primary btn-lg" id="budgetAdd" data-toggle="modal" data-target="#add_budget" style="margin: 0 auto; display: table;">
                                    <i class="fa fa-plus"></i> Add Budget</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center m-t-20">
                <button class="btn btn-primary btn-lg" type="submit" id="btnAdd">Add Activity</button>
            </div>
        </form>
    </div>
</div>

