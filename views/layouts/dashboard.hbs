  <script>
    $(document).ready(function () {
      $('#confirm_password').on("cut copy paste", function (e) {
        e.preventDefault();
      });
      $('#new_password').on("cut copy paste", function (e) {
        e.preventDefault();
      });
        $('#new_password').keyup(function () {
        $('#result').html(checkStrength($('#new_password').val()))
      })
      function checkStrength(password) {
        var strength = 0
        if (password.length < 8) {
          $('#result').removeClass()
          $('#result').addClass('short')
          return 'Too short'
        }
        if (password.length > 8) strength += 1
        // If password contains both lower and uppercase characters, increase strength value.
        if (password.match(/([a-z].*[A-Z])|([A-Z].*[a-z])/)) strength += 1
        // If it has numbers and characters, increase strength value.
        if (password.match(/([a-zA-Z])/) && password.match(/([0-9])/)) strength += 1
        // If it has one special character, increase strength value.
        if (password.match(/([!,%,&,@,#,$,^,*,?,_,~])/)) strength += 1
        // If it has two special characters, increase strength value.
        if (password.match(/(.*[!,%,&,@,#,$,^,*,?,_,~].*[!,%,&,@,#,$,^,*,?,_,~])/)) strength += 1
        // Calculated strength value, we can return messages
        // If value is less than 2
        if (strength < 2) {
          $('#result').removeClass()
          $('#result').addClass('weak')
          return 'Weak'
        } else if (strength == 2) {
          $('#result').removeClass()
          $('#result').addClass('good')
          return 'Good'
        } else {
          $('#result').removeClass()
          $('#result').addClass('strong')
          return 'Strong'
        }
      }
        $(window).scroll(function () {
          if ($(this).scrollTop() > 100) {
            $('.scrollup').fadeIn();
          } else {
            $('.scrollup').fadeOut();
          }
        });

        $('.scrollup').click(function () {
          $("html, body").animate({
            scrollTop: 0
          }, 600);
          return false;
        });

        var url = window.location.pathname;
          if (url == "/dashboard") {
            $(".sidebar").css("z-index", "1040");
          }

        if({{user.new_user_status}} == 1)
        {
          $("#exampleModalCenter").modal({
            show: true,
            backdrop: 'static',
            keyboard: false
          });

          $("#btnChangePasswordNew").click(function () {
              $("#newChangePass").submit();
            });

          $("#newChangePass").validate({
            rules: {
              new_password: {
                required: true,
                minlength: 8
              },
              confirm_password: {
                required: true,
                equalTo : "#new_password"
              }
            },
            messages: {
              new_password: {
                required: "New Password can't be blank"
              },
              confirm_password: {
                required: "Confirm Password can't be blank",
              }
            },
            submitHandler: function (form) {
              var new_password = $("#new_password").val();
              $.ajax({
                type: "POST",
                url: "/change-password-new-user",
                data: {
                  new_password: new_password
                },
                beforeSend: function (xhr) {
                  xhr.setRequestHeader('X-CSRF-Token', "{{csrfToken}}");

                  $("#btnChangePasswordNew").prop('disabled', true);
                  $("#btnChangePasswordNew").html("Loading...");
                },
                success: function (response) {
                  if(response.success == true)
                  {
                    swal({
                      title: "Congratulations!",
                      text: "Your password has been changed and account activated successfully",
                      type: "success"
                    }, function () {
                      window.location.href = "/dashboard";
                    });
                  }
                }
              });
            }
          });
        }
      });
  </script>
