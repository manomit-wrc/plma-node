              for (var i = 0; i < response.zipcode.length; i++) {
                // console.log(response.zipcode[i]);
                $("#zipcode").append('<option value="' + response.zipcode[i].id + '">' + response.zipcode[i].zip + '</option>');
              }
            },
            error: function (xhr) {

            }
          });
        }
      });
    });
  </script>
