    $(document).ready(function (e) {
        $(document).on('click', '#level_2', function () {
            $('#level2Designation').show();
            $('#level3Designation').hide();
            $('#level4Designation').hide();
        });

        $(document).on('click', '#level_3', function () {
            $('#level2Designation').show();
            $('#level3Designation').show();
            $('#level4Designation').hide();
        });
        $(document).on('click', '#level_4', function () {
            $('#level2Designation').show();
            $('#level3Designation').show();
            $('#level4Designation').show();
        });
        $(document).on('click', '#level_1', function () {
            $('#level2Designation').hide();
            $('#level3Designation').hide();
            $('#level4Designation').hide();
        });
        $(".section_remove option[value='74']").remove();
        $(document).on('change', '#level_1_designation', function (e) {
            var level_1_desig = $('#level_1_designation').val();
            $.ajax({
                type: "GET",
                url: "/get-level-2-designation",
                success: function (response) {
                    for (var i = 0; i < response.designations.length; i++) {
                        $("#level_2_designation").append('<option value="' + response.designations[i].id + '">' + response.designations[i].title + '</option>');
                    }
                    $("#level_2_designation option[value=" + level_1_desig + "]").remove();
                },
                error: function (xhr) {

                }
            });
        });
        $(document).on('change', '#level_2_designation', function (e) {
            var level_1_desig = $('#level_1_designation').val();
            var level_2_desig = $('#level_2_designation').val();
            $.ajax({
                type: "GET",
                url: "/get-level-2-designation",
                success: function (response) {
                    for (var i = 0; i < response.designations.length; i++) {
                        $("#level_3_designation").append('<option value="' + response.designations[i].id + '">' + response.designations[i].title + '</option>');
                    }
                    $("#level_3_designation option[value=" + level_1_desig + "]").remove();
                    $("#level_3_designation option[value=" + level_2_desig + "]").remove();
                },
                error: function (xhr) {

                }
            });
        });
        $(document).on('change', '#level_3_designation', function (e) {
            var level_1_desig = $('#level_1_designation').val();
            var level_2_desig = $('#level_2_designation').val();
            var level_3_desig = $('#level_3_designation').val();
            $.ajax({
                type: "GET",
                url: "/get-level-2-designation",
                success: function (response) {
                    for (var i = 0; i < response.designations.length; i++) {
                        $("#level_4_designation").append('<option value="' + response.designations[i].id + '">' + response.designations[i].title + '</option>');
                    }
                    $("#level_4_designation option[value=" + level_1_desig + "]").remove();
                    $("#level_4_designation option[value=" + level_2_desig + "]").remove();
                    $("#level_4_designation option[value=" + level_3_desig + "]").remove();
                },
                error: function (xhr) {

                }
            });
        });
        $("#btnAdd").click(function () {
            $("#frmAddFirm").submit();
        });

        $("#btnEdit").click(function () {
            $("#frmEditFirm").submit();
        });

        $("#frmAddFirm").validate({

            rules: {
                title: {
                    required: true
                },
                first_name: {
                    required: true
                },
                last_name: {
                    required: true
                },
                mobile_no: {
                    required: true
                },
                gender: {
                    required: true
                },
                address: {
                    required: true
                },
                level_1_designation: {
                    required: true
                },
                level_2_designation: {
                    required: true
                },
                level_3_designation: {
                    required: true
                },
                level_4_designation: {
                    required: true
                },
                group_id: {
                    required: true
                },
                designation_id: {
                    required: true
                },
                email: {
                    required: true,
                    email: true
                },
                password: {
                    required: true
                }
            },
            messages: {
                title: {
                    required: "Firm name can't be blank"
                },
                first_name: {
                    required: "First name can't be blank"
                },
                last_name: {
                    required: "Last name can't be blank"
                },
                mobile_no: {
                    required: "Mobile number can't be blank"
                },
                gender: {
                    required: "Gender can't be blank"
                },
                address: {
                    required: "Address can't be blank"
                },
                level_1_designation: {
                    required: "Please select designtaion"
                },
                group_id: {
                    required: "Please select group"
                },
                designation_id: {
                    required: "Please select designtaion"
                },
                email: {
                    required: "Email can't be blank",
                    email: "Must be valid email"
                },
                password: {
                    required: "Password can't be blank"
                }
            },
            submitHandler: function (form) {
                var title = $("#title").val(),
                    address = $("#address").val(),
                    email = $("#email").val(),
                    password = $("#password").val(),
                    first_name = $("#first_name").val(),
                    last_name = $("#last_name").val(),
                    mobile_no = $("#mobile_no").val(),
                    gender = $("#gender").val();
                group = $("#group_id").val();
                designation = $("#designation_id").val();
                is_attorney = $("#is_attorney:checked").val();
                approval_level = $("input[name=approval_level]:checked").val();
                level_1 = $("#level_1_designation").val();
                level_2 = $("#level_2_designation").val();
                level_3 = $("#level_3_designation").val();
                level_4 = $("#level_4_designation").val();
                $.ajax({
                    type: "POST",
                    url: "/firms/add",
                    data: {
                        title: title,
                        address: address,
                        email: email,
                        password: password,
                        first_name: first_name,
                        last_name: last_name,
                        mobile_no: mobile_no,
                        gender: gender,
                        group: group,
                        designation: designation,
                        is_attorney: is_attorney,
                        approval_level: approval_level,
                        level_1: level_1,
                        level_2: level_2,
                        level_3: level_3,
                        level_4: level_4
                    },
                    beforeSend: function (xhr) {
                        xhr.setRequestHeader('X-CSRF-Token', "{{csrfToken}}");

                        $("#btnAdd").prop('disabled', true);
                        $("#btnAdd").html("Loading...");
                    },
                    success: function (response) {
                        $("#add_user").animate({ scrollTop: 0 }, 1000);

                        if (response.success == true) {
                            $(`<div class="alert alert-success"><strong>Success! </strong>${response.message}</div>`).insertBefore("#frmAddFirm");
                            setTimeout(function () {
                                window.location.href = "/firms";
                            }, 2000);
                        }
                        else {

                            $(`<div class="alert alert-danger"><strong>Error! </strong>${response.message}</div>`).insertBefore("#frmAddFirm");
                            $(".alert").fadeTo(2000, 500).slideUp(500, function () {
                                $(".alert").remove();
                            });
                        }
                        $("#btnAdd").prop('disabled', false);
                        $("#btnAdd").html("Create Firm");
                    }
                });

            }
        });

        $("#frmEditFirm").validate({
            rules: {
                title_edit: {
                    required: true
                },
                address_edit: {
                    required: true
                },
                email_edit: {
                    required: true,
                    email: true
                },
                password_edit: {
                    required: true
                }
            },
            messages: {
                title_edit: {
                    required: "Firm name can't be blank"
                },
                address_edit: {
                    required: "Address can't be blank"
                },
                email_edit: {
                    required: "Email can't be blank",
                    email: "Must be valid email"
                },
                password_edit: {
                    required: "Password can't be blank"
                }
            },
            submitHandler: function (form) {
                var title = $("#title_edit").val(),
                    address = $("#address_edit").val(),
                    email = $("#email_edit").val(),
                    password = $("#password_edit").val(),
                    first_name = $("#first_name_edit").val(),
                    last_name = $("#last_name_edit").val(),
                    mobile_no = $("#mobile_no_edit").val(),
                    gender = $("#gender_edit").val();
                $.ajax({
                    type: "POST",
                    url: "/firms/edit",
                    data: {
                        title: title,
                        address: address,
                        email: email,
                        password: password,
                        first_name: first_name,
                        last_name: last_name,
                        mobile_no: mobile_no,
                        gender: gender,
                        firm_id: localStorage.getItem('firm_id'),
                        user_id: localStorage.getItem('user_id')
                    },
                    beforeSend: function (xhr) {
                        xhr.setRequestHeader('X-CSRF-Token', "{{csrfToken}}");

                        $("#btnEdit").prop('disabled', true);
                        $("#btnEdit").html("Loading...");
                    },
                    success: function (response) {
                        $("#edit_user").animate({ scrollTop: 0 }, 1000);

                        if (response.success == true) {
                            $(`<div class="alert alert-success"><strong>Success! </strong>${response.message}</div>`).insertBefore("#frmEditFirm");
                            setTimeout(function () {
                                window.location.href = "/firms";
                            }, 2000);
                        }
                        else {

                            $(`<div class="alert alert-danger"><strong>Error! </strong>${response.message}</div>`).insertBefore("#frmEditFirm");
                            $(".alert").fadeTo(2000, 500).slideUp(500, function () {
                                $(".alert").remove();
                            });
                        }
                        $("#btnEdit").prop('disabled', false);
                        $("#btnEdit").html("Update Firm");
                    }
                });

              }
          });


        $("#btnDelete").click(function () {
            $.ajax({
                type: "POST",
                url: "/firm/delete",
                data: {
                    firm_id: localStorage.getItem('firm_id'),
                    user_id: localStorage.getItem('user_id')
                },
                beforeSend: function (xhr) {
                    xhr.setRequestHeader('X-CSRF-Token', "{{csrfToken}}");
                    $("#btnDelete").prop('disabled', true);
                    $("#btnDelete").html("Deleting...");
                },
                success: function (response) {
                    if (response.success == true) {
                        $(`<div class="alert alert-success"><strong>Success! </strong>${response.message}</div>`).insertBefore("#frmFirmDelete");
                        setTimeout(function () {
                            window.location.href = "/firms";
                        }, 2000);
                    }
                    else {

                        $(`<div class="alert alert-danger"><strong>Error! </strong>${response.message}</div>`).insertBefore("#frmFirmDelete");
                        $(".alert").fadeTo(2000, 500).slideUp(500, function () {
                            $(".alert").remove();
                        });
                    }
                    $("#btnDelete").prop('disabled', false);
                    $("#btnDelete").html("Delete");
                }
            });
        });

        $("#clearSearch").click(function () {
            window.location.href = "/firms";
        });
    });



// start view
