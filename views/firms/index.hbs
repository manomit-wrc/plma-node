<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="pg-header">
            <div class="row">
                {{#if success_message}}
                <div class="alert alert-success">
                    <strong>Success! </strong>{{success_message}}
                </div>
                {{/if}}
                <div class="col-xs-4">
                    <h4 class="page-title">Firms</h4>
                </div>
                <div class="col-xs-8 text-right">
                    <a href="#" class="btn btn-primary rounded" data-toggle="modal" data-target="#add_firm">
                        <i class="fa fa-plus"></i> Add Firm
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive firms-table">
                    <table class="table table-striped custom-table datatable">
                        <thead>
                            <tr>
                                <th style="width:20%;">Firm</th>
                                <th style="width:20%;">Firm Admin</th>
                                <th>Email</th>
                                <th>Created Date</th>
                                <th class="text-right">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each users}}
                            <tr data-first-name="{{this.first_name}}" data-last-name="{{this.last_name}}" data-email="{{this.email}}" data-firm-title="{{this.firm.title}}"
                                data-firm-address="{{this.firm.address}}" data-firm-address1="{{this.firm.address1}}" data-firm-address2="{{this.firm.address2}}" data-mobile-no="{{this.mobile_no}}"
                                data-firm-id="{{this.firm.id}}" data-user-id="{{this.id}}" data-approval-level="{{this.firm.approval_level}}"
                                data-level1-desg="{{this.firm.level_1}}" data-level2-desg="{{this.firm.level_2}}" data-level3-desg="{{this.firm.level_3}}"
                                data-level4-desg="{{this.firm.level_4}}" data-group-id="{{this.group_id}}" data-designation-id="{{this.designation_id}}"
                                data-is-attorney="{{this.is_attorney}}" data-country="{{this.country}}" data-state="{{this.state}}" data-city="{{this.city}}" data-zipcode="{{this.zipcode}}">
