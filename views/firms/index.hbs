<link rel="stylesheet" type="text/css" href="/assets/css/bootstrap-datetimepicker.min.css"> {{/content}}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="pg-header">
            <div class="row">
                {{#if success_message}}
                    <div class="alert alert-success">
                        <strong>Success! </strong>{{success_message}}
                    </div>
                {{/if}}
                <div class="col-xs-4">
                    <h4 class="page-title">Firms</h4>
                </div>
                <div class="col-xs-8 text-right">
                    <a href="#" class="btn btn-primary rounded" data-toggle="modal" data-target="#add_user">
                        <i class="fa fa-plus"></i> Add Firm</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped custom-table datatable">
                        <thead>
                            <tr>
                                <th>SL#</th>
                                <th style="width:30%;">Name</th>
                                <th>Email</th>
                                <th>Firm</th>
                                <th>Created Date</th>
                                <th class="text-right">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each users}}
                            <tr data-first-name="{{this.first_name}}" data-last-name="{{this.last_name}}" data-email="{{this.email}}" data-firm-title="{{this.firm.title}}"
                                data-firm-address="{{this.firm.address}}" data-mobile-no="{{this.mobile_no}}" data-gender="{{this.gender}}"
                                data-firm-id="{{this.firm.id}}" data-user-id="{{this.id}}" data-approval-level="{{this.firm.approval_level}}">
                                <td>{{math @index "+" 1}}</td>
                                <td>
                                    <a href="javascript:void(0)" class="avatar">{{first_letter this.first_name}}</a>
                                    <h2>
                                        <a href="javascript:void(0)"  class="view">{{this.first_name}}&nbsp;{{this.last_name}}</a>
                                    </h2>
                                </td>
                                <td>{{this.email}}</td>
                                <td>{{this.firm.title}}</td>
                                <td>{{dateFormat this.createdAt "DD-MM-YYYY"}}</td>

                                <td class="text-right">
                                  <a href="javascript:void(0)" data-toggle="modal" class="view btn btn-success btn-sm"><i class="fa fa-eye m-r-5"></i>                                    </a>
                                 </a>


                                    <a href="javascript:void(0)" data-toggle="modal" class="edit btn btn-info btn-sm">
                                        <i class="fa fa-pencil m-r-5"></i>
                                    </a>
                                    <a href="javascript:void(0)" data-toggle="modal" class="delete btn btn-danger btn-sm">
                                        <i class="fa fa-trash-o m-r-5"></i>
                                    </a>
                                </td>
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

