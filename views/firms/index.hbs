                                    <a href="javascript:void(0)" class="avatar">{{first_letter this.firm.title}}</a>
                                    <h2>
                                        <a href="javascript:void(0)" class="view">{{this.firm.title}}</a>
                                    </h2>
                                </td>
                                <td>{{this.first_name}}&nbsp;{{this.last_name}}</td>
                                <td>{{this.email}}</td>
                                <td>{{dateFormat this.createdAt "MM-DD-YYYY"}}</td>
                                <td class="text-right">
