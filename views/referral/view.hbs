      $('#indi_referral').hide();
      $('#org_referral').show();
    });


    $(document).on('click', '#referral_type', function () {
      $('#target_list').show();
      $('#client_list').hide();
    });

    $(document).on('click', '#organization_type', function () {
      $('#target_list').hide();
      $('#client_list').show();
    });

