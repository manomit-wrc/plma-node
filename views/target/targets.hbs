                                    {{#each industry}}
                                    <option value="{{this.id}}" {{#if_eq this.id ../industry_type}} selected="selected"
                                        {{/if_eq}}>{{this.industry_name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                       
